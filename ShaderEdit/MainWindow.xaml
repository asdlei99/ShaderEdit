<Window x:Class="ShaderEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShaderEdit"
        xmlns:AvalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="ShaderEdit" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <local:D3D11Host x:Name="Host0"
                         Grid.Row="0"
                         Grid.Column="0"
                         Margin="5"
                         SnapsToDevicePixels="True"                         
                         Stretch="Fill" />
        <Grid Grid.Column="1" Grid.Row="0" SnapsToDevicePixels="True" >
            <DockPanel LastChildFill="True">
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File"></MenuItem>
                    <MenuItem Header="_Save" Click="Menu_Save"></MenuItem>   
                    <MenuItem Header="_Exit"></MenuItem>   
                </Menu>
                <StackPanel/>
                <local:HLSLEditor x:Name="ShaderEditor" Height="375" DockPanel.Dock="Top"/>
                <StatusBar DockPanel.Dock="Top" >
                    <StatusBarItem >Status:</StatusBarItem>
                </StatusBar>
            </DockPanel>
            </Grid>
    </Grid>
</Window>
